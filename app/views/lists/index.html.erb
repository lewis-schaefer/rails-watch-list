<div class="container">
  <h2>Film Lists</h2>
  <div class="d-flex flex-wrap justify-content-between">
    <% @lists.each do | list | %>
      <div class='card' style='width: 240px; height: auto; margin: 10px;'>
        <% if list.photo.key? %>
          <%= cl_image_tag list.photo.key, crop: :thumb %>
        <% else %>
          <%= cl_image_tag("cinema_ssfobe.jpg") %>
        <% end %>
        <p><%= link_to list.name,  list_path(list)%></p>
        <p><%= link_to "Delete", list_path(list), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure you want to remove your #{list.name} list?"
              }
        %></p>
      </div>
    <% end %>
  </div>
</div>
