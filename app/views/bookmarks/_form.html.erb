<%= simple_form_for [list, bookmark] do |f| %>
  <div class='d-flex'>
    <%= f.association :movie, label: false, prompt: "Select a Movie" %>
    <%= f.input :comment, label: false, placeholder: "Add a comment...", input_html: { style: "height: 38px;" } %>
    <%= f.submit "Add Film", style: 'height: 38px;' %>
  </div>
<% end %>
